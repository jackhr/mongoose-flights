<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>Mongoose Flights</title>
</head>
<body id="flights-index-body">
  <nav id ="flights-index-nav">
    <a href="../">Home</a>
  </nav>
  <br><br>
  <table id="index-table">
    <thead>
      <tr>
        <th>Flight #</th>
        <th>Airline</th>
        <th>Airport</th>
        <th>Departure</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(function(f) { %>
        <tr>
          <td><%= f.flightNo %></td>
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.departs %></td>
          <td><a href="flights/<%= f._id %>">Details</a></td>
          <td>
            <form action="/flights/<%= f._id %>?_method=DELETE" method="POST">
              <button type="submit">X</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <p id="add-flight">Add a <a href="/flights/new">Flight</a></p>
</body>
</html>